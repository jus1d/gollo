{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Gollo",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#builtin"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#standard"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.glo",
				"match": "\\b(if|else|end|while|do|bind|use)\\b"
			}]
		},
		"builtin": {
			"patterns": [{
				"name": "keyword.other.builtin.glo",
				"match": "\\b(mem|load64|store64|put|fputs|here|copy|over|swap|2swap|drop|rot|syscall0|syscall1|syscall2|syscall3|syscall4|syscall5|syscall6)\\b"
			}]
		},
		"standard": {
			"patterns": [{
				"name": "keyword.other.standard.glo",
				"match": "\\b(stdin|stdout|stderr|write|read|open|exit|puts|eputs|putd|assert|2copy|2drop|endl|strlen)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.glo",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.glo",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [{
				"name": "keyword.other.unit.integer.glo",
				"match": "\\b(-?[0-9]+\\.?[0-9]*)\\b"
			}]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.glo",
					"match": "//.*?$"
				}
			]
		}
	},
	"scopeName": "source.glo"
}